<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= image_tag post.image %></td>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><button type="button" class="btn btn-info"><%= link_to 'Show', post %></button></td>
		<% if post.user_id == current_user.try(:id) %>
          <td><button type="button" class="btn btn-warning"><%= link_to 'Edit', edit_post_path(post) %></button></td>
          <td><button type="button" class="btn btn-danger"><%= link_to 'Destroy', post, method: :delete, data: { confirm: '削除しますか?' } %></button></td>
		<% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button type="button" class="btn btn-primary"><%= link_to 'New Post', new_post_path %></button>
