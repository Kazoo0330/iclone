<p id="notice"><%= notice %></p>
<div class="forms">
  <p>
    <strong>Image:</strong>
    <%= image_tag @post.image %>
  </p>
  
  <p>
    <strong>Title:</strong>
    <%= @post.title %>
  </p>
  
  <p>
    <strong>Content:</strong>
    <%= @post.content %>
  </p>

  <% unless @post.user == current_user %>
    <% if @favorite.present? %>
      <%= link_to 'お気に入り解除', favorite_path(post_id: @post.id), method: :delete, class: 'btn btn-danger' %>
    <% else %>
      <%= link_to 'お気に入り', favorites_path(post_id: @post.id), method: :post, class: 'btn btn-primary' %>
    <% end %>
  <% end  %>
  <%= link_to 'Back', posts_path %>
</div>
