<div class="forms">
  <h2><%= current_user.name %>のお気に入りたち<h2>

  <% @favorite_posts.each do |favorite_posts| %>
    <table>
      <tr><p>投稿者:<%= favorite_posts.user.name %></p></tr>
  	  <tr><p>title:<%= favorite_posts.title %></p></tr>
      <tr><p>content:<%= favorite_posts.content %></p></tr>
	  <tr><p>image: <%= image_tag favorite_posts.image %><p></tr>
    </table>
  <% end %>


  <%=link_to '投稿する', new_post_path, class: 'btn btn-success' %>
</div>
